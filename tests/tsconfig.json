{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    
    "lib": [
      "dom",
      "es7"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "exclude": [
    "./dist/**/*"
  ],
  "include": [
    "./src"
  ]
}